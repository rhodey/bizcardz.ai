{
  "name": "bizcardz",
  "version": "1.0.0",
  "description": "bizcardz.ai",
  "scripts": {
    "bundle": "browserify src/index.js -o dist/bundle.js",
    "minimize": "terser dist/bundle.js --compress --mangle --output dist/bundle.js",
    "copy-dist": "cp -R index.html assets dist/",
    "dist": "npm run bundle && npm run minimize && npm run copy-dist",
    "dev": "bhr src/index.js index.html assets/ -o dist/bundle.js"
  },
  "dependencies": {
    "choo": "^7.1.0",
    "luxon": "^3.3.0",
    "debounce": "^2.2.0",
    "ua-parser-js": "^1.0.38",
    "js-cookie": "^3.0.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "minimist": "^1.2.0",
    "choo-devtools": "^3.0.4",
    "browserify-hot-reload": "^1.2.1",
    "browserify": "^17.0.0",
    "terser": "^5.17.3"
  }
}
